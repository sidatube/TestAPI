                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>
                <Ellipse Grid.Column="0" Width="80" Height="80">
                    <Ellipse.Fill>
                        <ImageBrush ImageSource="/Assets/picture-box-2.jpg" />
                    </Ellipse.Fill>
                </Ellipse>
